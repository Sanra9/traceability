<!DOCTYPE html>
<html>
  <head>
    <title>Traceability</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="row">
         <div class="col-sm-12">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#Incubator-Traceability-NavBar" aria-expanded="false">
              <span class="sr-only">Toggle Navegation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "<i>Incubator</i><strong>Traceability</strong>".html_safe, root_path, class:"navbar-brand"%>
          </div>
          <div class="collapse navbar-collapse" id="Incubator-Traceability-NavBar">
            <ul class="nav navbar-nav">

            </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
            <li class="dropdown">
            <a class="navbar-brand dropdown-toggle" data-toggle="dropdown"><strong>Welcome</strong><i> <%= current_user.email %> <span class="caret"></span></i></a>
              <ul class="dropdown-menu" role="menu">
                <li> <%= link_to "Logout", destroy_user_session_path, method: :delete%></li>
                <li><%=  link_to "Change Password", edit_user_registration_path %></li>
              </ul>
            </li>
            <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <li><%= link_to "Sign In", user_session_path %></li>
            <% end %>
          </ul>
          </div>
        </div>
      </div>
    </div>
    </nav>
    <div class='myAlert-bottom'>
      <div class="container">
        <div class="row">
          <div class="col-sm-3 col-sm-offset-3">
            <% if flash[:notice] %>
              <div class="alert alert-info alert-dismissible fade in" role="alert"><%= flash[:notice] %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
