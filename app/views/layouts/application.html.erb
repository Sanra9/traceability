<!DOCTYPE html>
<html>
  <head>
    <title>Traceability</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="Incubator Traceability NavBar" aria-expanded="false">
              <span class="sr-only">Toggle Navegation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "Incubator <strong>Traceability</strong>".html_safe, root_path, class:"navbar-brand"%>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
            <li class="navbar-brand">Hola <%= current_user.email %></li>
            <li> <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"navbar-brand"%></li>
            <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <li><%= link_to "Sign In", user_session_path %></li>
            <% end %>
          </ul>
      </div>
    </nav>
    <div class='myAlert-bottom'>
      <div class="container">
        <div class="row">
          <div class="col-sm-3 col-sm-offset-3">
            <% if flash[:notice] %>
              <div class="alert alert-info alert-dismissible fade in" role="alert"><%= flash[:notice] %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
