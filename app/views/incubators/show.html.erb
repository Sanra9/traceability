<div class="container">
  <div class="row">
    <div class="col-ms-12">
      <h1><%= @incubator.serial_code %></h1>
        <div class="text-right">
        <%= @incubator.user_id %>
        </div>
      <table class="table table-default">
        <thead>
          <tr>
            <th>Incubator_id</th>
            <th>Position</th>
            <th>Date</th>
            <th>Initial Time</th>
            <th>Final Time </th>
            <th>Total Time</th>
            <th>Type</th>
            <th>Upshot</th>
          </tr>
        </thead>
        <tbody>
          <% @incubator.entries.each do |entry| %>
            <% if entry.upshot%>
            <tr bgcolor="#aacc36">
            <% else %>
            <tr bgcolor="#df634e">
            <% end %>
            <th><%= entry.incubator_id %></th>
            <th><%= entry.position %></th>
            <th><%= entry.date %></th>
            <th><%= entry.time_initial %></th>
            <th><%= entry.time_end %></th>
            <th><%= distance_of_time_in_words(entry.time_initial,entry.time_end) if entry.time_initial %></th>
            <th><%= entry.biotype %></th>
            <th><%= entry.upshot %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-right">
        <h4>Import Data</h4>
        <%= form_tag import_entries_path, multipart: true do %>
        <span class="btn btn-large btn-warning btn-file">
        Choose File
          <%= file_field_tag :attachment  %>
        </span>
        <%= submit_tag 'Import File', :class => 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
